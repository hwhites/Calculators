---
// src/pages/games/spider.astro
import Layout from '../../layouts/Layout.astro';
---

<Layout title="Spider | CourseAssist">
  <div class="max-w-xl mx-auto">
    <h1 class="text-3xl font-bold text-center mb-4">Tetris</h1>
    
    <!-- Game Container -->
    <div class="aspect-w-1 aspect-h-1 bg-black rounded-lg overflow-hidden border border-gray-200">
      <!-- This points to the index.html file you added to your public folder -->
      <iframe 
        src="/games/snake/index.html" 
        class="w-full h-full" 
        frameborder="0">
      </iframe>
    </div>
    
    <div class="text-center mt-4">
      <a href="/study-break" class="text-blue-600 hover:underline">&larr; Back to all games</a>
    </div>
  </div>
</Layout>

<style>
  /* This helps maintain a 1:1 aspect ratio for the game window */
  .aspect-w-1 {
    position: relative;
    padding-bottom: 100%; /* 1 / 1 = 1 */
  }
  .aspect-h-1 iframe {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
  }
</style>
